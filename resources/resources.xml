<resources>

	<properties>
		<!--property id="showSeconds" type="boolean">true</property-->
		<property id="showColon" type="boolean">false</property>
		<property id="dateFormat" type="number">0</property>
		<property id="batteryLimit" type="number">30</property>
		<property id="showHeart" type="boolean">true</property>
		<property id="BackgroundColor" type="string">BLACK</property>
	</properties>

	<settings>
		<!--setting propertyKey="@Properties.showSeconds"
			title="@Strings.ShowSeconds">
			<settingConfig type="boolean" />
		</setting-->

		<setting propertyKey="@Properties.showColon"
			title="@Strings.ShowColon">
			<settingConfig type="boolean" />
		</setting>
		
		<setting propertyKey="@Properties.showHeart"
			title="@Strings.ShowHeart">
			<settingConfig type="boolean" />
		</setting>
		

		<setting propertyKey="@Properties.dateFormat"
			title="@Strings.DateFormat">
			<settingConfig type="list" required="true">
				<listEntry value="0">@Strings.DAY_DATE_MONTH</listEntry>
				<listEntry value="1">@Strings.YEAR_MON_DATE</listEntry>
				<listEntry value="2">@Strings.DAY_DATE_MON</listEntry>
				<listEntry value="3">@Strings.DAY_MON_DATE</listEntry>
			</settingConfig>
		</setting>

		<setting propertyKey="@Properties.batteryLimit"
			title="@Strings.BatteryLimit">
			<settingConfig type="list" required="true">
				<listEntry value="10">@Strings.Percent10</listEntry>
				<listEntry value="15">@Strings.Percent15</listEntry>
				<listEntry value="20">@Strings.Percent20</listEntry>
				<listEntry value="25">@Strings.Percent25</listEntry>
				<listEntry value="30">@Strings.Percent30</listEntry>
			</settingConfig>
		</setting>
	</settings>

</resources>
